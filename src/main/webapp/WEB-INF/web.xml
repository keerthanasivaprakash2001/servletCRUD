<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>addStudent</servlet-name>
        <servlet-class>servlet.AddServlet</servlet-class>
    </servlet>
<servlet-mapping>
<servlet-name>addStudent</servlet-name>
<url-pattern>/add</url-pattern>
</servlet-mapping>

    <servlet>
        <servlet-name>getStudent</servlet-name>
        <servlet-class>servlet.getAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getStudent</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateStudent</servlet-name>
        <servlet-class>servlet.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateStudent</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DeleteStudent</servlet-name>
        <servlet-class>servlet.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteStudent</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>loginStudent</servlet-name>
        <servlet-class>servlet.loginservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginStudent</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>
